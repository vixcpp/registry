{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vixcpp.github.io/registry/schema/registry.schema.json",
  "title": "Vix Registry Metadata (V1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "id",
    "specVersion",
    "index",
    "defaults",
    "security",
    "schemas"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]{2,64}$"
    },
    "specVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "index": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "format",
        "path",
        "fileNaming"
      ],
      "properties": {
        "format": {
          "type": "string",
          "enum": [
            "json-per-package"
          ]
        },
        "path": {
          "type": "string",
          "minLength": 1
        },
        "fileNaming": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "primaryVcs",
        "preferredHost",
        "manifestFile",
        "versionTagPrefix"
      ],
      "properties": {
        "primaryVcs": {
          "type": "string",
          "enum": [
            "git"
          ]
        },
        "preferredHost": {
          "type": "string",
          "enum": [
            "github",
            "gitlab",
            "gitea",
            "generic"
          ]
        },
        "manifestFile": {
          "type": "string",
          "minLength": 1
        },
        "versionTagPrefix": {
          "type": "string"
        }
      }
    },
    "sync": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recommendedTtlSeconds": {
          "type": "integer",
          "minimum": 0
        },
        "allowOfflineSearch": {
          "type": "boolean"
        }
      }
    },
    "security": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "baseline",
        "signatures"
      ],
      "properties": {
        "baseline": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "requireCommitPinning",
            "requireLicense",
            "requireManifest"
          ],
          "properties": {
            "requireCommitPinning": {
              "type": "boolean"
            },
            "requireLicense": {
              "type": "boolean"
            },
            "requireManifest": {
              "type": "boolean"
            }
          }
        },
        "signatures": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "enabled",
            "type",
            "keyDistribution"
          ],
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "type": {
              "type": "string",
              "enum": [
                "minisign",
                "sigstore",
                "none"
              ]
            },
            "keyDistribution": {
              "type": "string",
              "enum": [
                "registry",
                "dns",
                "repo",
                "none"
              ]
            }
          }
        }
      }
    },
    "schemas": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "packageEntry",
        "registryMeta"
      ],
      "properties": {
        "packageEntry": {
          "type": "string",
          "minLength": 1
        },
        "registryMeta": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "namespaces": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "policyPath": {
          "type": "string",
          "minLength": 1
        },
        "defaultPolicy": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ownership": {
              "type": "string",
              "enum": [
                "open",
                "restricted"
              ]
            },
            "requireReview": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
